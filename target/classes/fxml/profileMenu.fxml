<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.ProfileMenuController"
            prefHeight="720.0" prefWidth="1280.0" stylesheets="@../CSS/style.css">
    <center>
        <VBox spacing="5" alignment="CENTER" maxWidth="350">
            <Button styleClass="ProfileMenuButton" text="Change Username" onAction="#changeUsernameClicked"/>
            <Button styleClass="ProfileMenuButton" text="Change Password" onAction="#changePasswordClicked"/>
            <Button styleClass="ProfileMenuButton" text="Logout" onAction="#logoutClicked"/>
            <Button styleClass="ProfileMenuButton" text="Delete Account" onAction="#deleteClicked"/>
            <Button styleClass="ProfileMenuButton" text="Back" onAction="#backClicked"/>
        </VBox>
    </center>

</BorderPane>
