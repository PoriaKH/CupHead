<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="View.LoginPageController"

            prefHeight="720.0" prefWidth="1280.0" stylesheets="@../CSS/style.css">
    <center>
        <VBox spacing="5" alignment="CENTER" maxWidth="350">
            <Label text="Username"/>
            <TextField fx:id="usernameTF" promptText="enter your username"/>
            <Label text="Password"/>
            <PasswordField fx:id="passwordTF" promptText="enter your password"/>
            <Button text ="Login" onAction="#loginMouseAction"/>
            <Button styleClass="RegisterStyle" text ="Register" onMouseClicked="#registerMouseClicked"/>
            <Text text=" "/>
            <Text fx:id="message"/>
            <Text text=" "/>
            <Button styleClass="GuestStyle" text="Login as Guest" onAction="#guestMouseClicked"/>
        </VBox>
    </center>

</BorderPane>
